<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ippteam.fish.dao.IUserDao">
    <!--设置model类和数据库中表的字段一一对应-->
    <resultMap id="userMap" type="User">
        <result column="user_name" property="userName" jdbcType="CHAR"/>
        <result column="full_name" property="fullName" jdbcType="CHAR"/>
        <result column="nike_name" property="nikeName" jdbcType="CHAR"/>
        <result column="birthdate" property="birthDate" jdbcType="DATE"/>
        <result column="register_ip" property="registerIP" jdbcType="CHAR"/>
        <result column="register_date" property="registerDate" jdbcType="DATE"/>
    </resultMap>
    <!-- 查询单条记录 -->
    <select id="getUserByID" parameterType="int" resultMap="userMap">
      select * from `user` where id = #{id}
    </select>

    <select id="getUserByUserName" parameterType="String" resultMap="userMap">
        select * from `user` where user_name = #{userName}
    </select>
    
    <insert id="insert" parameterType="User" flushCache="true" useGeneratedKeys="true" keyProperty="id">
        insert into user(user_name,password,full_name,nike_name,birth_date,email,phone,register_ip,register_date)
        values          (#{userName},#{password},#{fullName},#{nikeName},#{birthDate},#{email},#{phone},#{registerIP},#{registerDate})
    </insert>
</mapper>